{
  
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "paths": {
      "/*": ["*"]
    },
    "preserveSymlinks": true,
    "sourceMap": true,
    "target": "es5",
    "types": ["node", "mocha"]
  },
  "exclude": [
    "./.meteor/**",
    "./packages/**"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}